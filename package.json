{
  "name": "ibc-escrow-audit",
  "version": "1.0.0",
  "description": "IBC Escrow Audit Tool",
  "main": "dist/audit.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "npm run build && node dist/audit.js",
    "quick": "npm run build && node dist/audit.js quick",
    "comprehensive": "npm run build && node dist/audit.js comprehensive",
    "update-chains": "npm run build && node dist/updateChains.js",
    "update-chains-force": "npm run build && node dist/updateChains.js -f",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.8",
    "@grpc/proto-loader": "^0.7.10",
    "adm-zip": "^0.5.16",
    "axios": "^1.6.8",
    "chalk": "^5.0.0",
    "dotenv": "^16.4.5",
    "inquirer": "^10.0.4",
    "lru-cache": "^10.2.0",
    "protobufjs": "^7.2.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/adm-zip": "^0.5.7",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "license": "MIT"
}
